<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

    <t t-name="asterisk_click2dial.Click2DialSystray" owl="1">
        <div
            class="o-dropdown dropdown o-dropdown--no-caret o-mail-DiscussSystray-class"
        >
            <button class="dropdown-toggle " t-on-click="() => this.onOpenCaller()">
                <i class="fa fa-phone" />
        </button>
    </div>
    </t>


    <t t-name="asterisk_click2dial.Click2DialCallers">
        <Dialog size="'md'" title="props.title" modalRef="modalRef">

          <t t-set-slot="default">
              <div>Βρήκα ότι μιλάς με τον αριθμό <strong><t t-esc="props.talking_number"/></strong>
                  o οποίος αντιστοιχεί στις παρακάτω εγγραφές:
              </div>
              <table
                  style="border-collapse: collapse; width: 100%;"
              >
                  <tr>
                    <th style="border: 1px solid black; padding: 10px; text-align: left;">Είδος</th>
                    <th style="border: 1px solid black; padding: 10px; text-align: left;">Εγγραφή</th>
                  </tr>
                  <tr t-foreach="props.recs" t-as="i" t-key="i">
                    <td style="border: 1px solid black; padding: 10px; text-align: left;"
                    ><t t-esc="i[0]"/></td>
                    <td style="border: 1px solid black; padding: 10px; text-align: left;"
                    >
                        <a t-att-href="i[3]" target="_blank" rel="noopener noreferrer">
                            <t t-esc="i[2]"/>
                        </a>
                    </td>
                  </tr>
              </table>

          </t>
        </Dialog>
    </t>
</templates>
